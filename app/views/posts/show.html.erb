<h1> <%= @post.title %> </h1>
<p> <%= @post.content %> </p>

<B>Under: </B>
<% @post.categories.each do |cat| %>
 <%= cat.name %>;
<% end %>

<h3>Comments: </h3>
<% @users.each do |user| %>
<h4> <%= link_to user.username, user_path(user) %> </h4>
<p> <% user.comments.each do |comment| %>
  <% if comment.post == @post %>
  <%= comment.content %><br>
  <% end %>
  <%end %>
<% end %>

<%= render 'comments/form', post: Comment.new %>
